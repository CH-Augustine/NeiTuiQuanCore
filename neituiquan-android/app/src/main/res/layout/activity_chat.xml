<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/backgroundColor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/chatUI_toolBarLayout"
        android:elevation="3dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/chatUI_statusView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/backgroundColor"/>
        <LinearLayout
            android:background="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarHeight"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/chatUI_backImg"
                android:layout_width="@dimen/toolBarHeight"
                android:layout_height="match_parent"
                android:src="@mipmap/back_left"
                android:padding="15dp"/>
            <TextView
                android:id="@+id/chatUI_titleTv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="聊天"
                android:textSize="@dimen/centerText"
                android:textColor="@color/highTextColor"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/chatUI_moreImg"
                android:src="@mipmap/more"
                android:layout_width="@dimen/toolBarHeight"
                android:layout_height="match_parent"
                android:padding="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chatUI_contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_weight="1"
            android:id="@+id/chatUI_refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            app:srlEnableLoadMore="false"
            app:srlEnableRefresh="true"
            app:srlEnableAutoLoadMore="false"
            app:srlPrimaryColor="@color/lineColor"
            app:srlAccentColor="@color/themeColor"
            app:srlEnablePreviewInEditMode="true"
            app:srlEnableOverScrollDrag="true">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/chatUI_recyclerView"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <LinearLayout
            android:background="@color/backgroundColor"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/chatUI_inputTv"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null" />
                    <View
                        android:id="@+id/chatUI_inputBottomView"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/themeColor"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/chatUI_sendTv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="发送"
                    android:textColor="@color/white"
                    android:textSize="@dimen/centerText"
                    android:background="@drawable/selector_button"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/chatUI_photoImg"
                    android:padding="5dp"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/photo_full"/>
                <ImageView
                    android:id="@+id/chatUI_cameraImg"
                    android:padding="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/camera_full"/>

                <ImageView
                    android:id="@+id/chatUI_emjoyImg"
                    android:padding="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/emjoy_full"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/chatUI_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>