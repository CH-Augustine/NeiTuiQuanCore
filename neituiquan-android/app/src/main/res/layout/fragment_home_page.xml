<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    android:id="@+id/homePageUI_refreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:srlEnableLoadMore="false"
    app:srlEnableAutoLoadMore="false"
    app:srlPrimaryColor="@color/lineColor"
    app:srlAccentColor="@color/themeColor"
    app:srlEnablePreviewInEditMode="true"
    app:srlEnableOverScrollDrag="true">
    <com.scwang.smartrefresh.layout.header.BezierRadarHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.neituiquan.view.AutoLoadRecyclerView
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:id="@+id/homePageUI_recyclerView"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent"></com.neituiquan.view.AutoLoadRecyclerView>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>