<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <View
        android:id="@+id/accountUI_statusView"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarHeight"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/accountUI_cancelTv"
            android:layout_width="@dimen/toolBarHeight"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textSize="@dimen/centerText"
            android:textColor="@drawable/selector_text"/>
        <TextView
            android:id="@+id/accountUI_switcherTv"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/toolBarHeight"
            android:layout_height="match_parent"
            android:text="注册"
            android:gravity="center"
            android:textSize="@dimen/centerText"
            android:textColor="@drawable/selector_text"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/accountUI_frameLayout"></FrameLayout>

</LinearLayout>