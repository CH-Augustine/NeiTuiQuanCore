<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/backgroundColor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:background="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/releaseJobUI_statusView"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarHeight"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/releaseJobUI_backImg"
                android:layout_width="@dimen/toolBarHeight"
                android:layout_height="match_parent"
                android:src="@mipmap/back_left"
                android:padding="15dp"/>
            <TextView
                android:text="发布职位"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/centerText"
                android:textColor="@color/highTextColor"/>
            <TextView
                android:id="@+id/releaseJobUI_releaseTv"
                android:layout_width="@dimen/toolBarHeight"
                android:layout_height="match_parent"
                android:text="发布"
                android:gravity="center"
                android:textSize="@dimen/centerText"
                android:textColor="@drawable/selector_text"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/releaseJobUI_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <LinearLayout
            android:id="@+id/releaseJobUI_contentLayout"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/s_edit"/>
                <EditText
                    android:id="@+id/releaseJobUI_titleTv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="标题"
                    android:textColorHint="@color/lowTextColor"
                    android:textColor="@color/highTextColor"
                    android:textSize="@dimen/centerText"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/s_edit"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="添加标签"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/smallText"
                    android:textColor="@color/themeColor"/>

                <ImageView
                    android:id="@+id/releaseJobUI_addLabelImg"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/s_add" />
            </LinearLayout>

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/releaseJobUI_labelLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lowTextColor"
                android:text="点击添加的标签，长按可以删除"
                android:textSize="@dimen/smallText"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:id="@+id/releaseJobUI_educationLayout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/s_edit"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/releaseJobUI_educationTv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="学历要求"
                    android:textColorHint="@color/lowTextColor"
                    android:textColor="@color/highTextColor"
                    android:textSize="@dimen/centerText"
                    android:text=""/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/more_left"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/lineColor"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/s_edit"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/releaseJobUI_workAgeTv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="工作年龄"
                    android:textColorHint="@color/lowTextColor"
                    android:textColor="@color/highTextColor"
                    android:textSize="@dimen/centerText"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/lineColor"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/s_edit"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/releaseJobUI_minSalaryTv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="最低薪资"
                    android:textColorHint="@color/lowTextColor"
                    android:textColor="@color/highTextColor"
                    android:textSize="@dimen/centerText"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/s_edit"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/releaseJobUI_maxSalaryTv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="最高薪资"
                    android:textColorHint="@color/lowTextColor"
                    android:textColor="@color/highTextColor"
                    android:textSize="@dimen/centerText"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/lineColor"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/s_edit"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="职位描述"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/smallText"
                    android:textColor="@color/themeColor"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/releaseJobUI_descriptionLayout"
                android:background="@drawable/shape_edit_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <EditText
                    android:id="@+id/releaseJobUI_descriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="描述内容..."
                    android:textColorHint="@color/lowTextColor"
                    android:textColor="@color/highTextColor"
                    android:textSize="@dimen/centerText"
                    android:text=""
                    android:gravity="left"
                    android:padding="5dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/releaseJobFG_delTv"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="删除此项"
                android:textColor="@color/white"
                android:textSize="@dimen/centerText"
                android:background="@drawable/selector_button_error"
                android:gravity="center"/>

            <View
                android:id="@+id/releaseJobUI_emptyView"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>